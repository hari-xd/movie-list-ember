<div class="boddy">
  <Btns>
    <input
      id="search-input"
      type="text"
      placeholder="Search here..."
      value={{this.title}}
      {{on "input" this.updateTitle}}
    />
    <LinkTo @route="addm" class="btn add-btn"><i class="fas fa-plus"></i> Add </LinkTo>
    <LinkTo @route="delm"class="btn delete-btn"><i class="fas fa-trash"></i> Delete</LinkTo>
    <LinkTo @route="editMovie" class="btn edit-btn"><i class="fa-solid fa-pen"></i> Edit</LinkTo>
    <LinkTo @route="fetch-movies" class="btn add-btn"><i class="fas fa-tv"></i> Fetch </LinkTo>


  </Btns>

  <div class="tb">
    <table class="movie-table">
      <thead>
        <tr>
          <th>S.No</th>
          <th>Name</th>
          <th>Year</th>
          <th>Genre</th>
          <th>IMDb</th>
          <th>Box Office</th>
          
        </tr>
      </thead>

        <tbody>
          <VerticalCollection
  @items={{this.filteredMovies}}
  @containerSelector=".tb"
  @estimateHeight={{50}}
  @staticHeight={{false}}
  @bufferSize={{5}}
  @firstReached={{this.firstReachedCallback}}
  @lastReached={{this.lastReachedCallback}}
  as |movie index|
>
          <tr class="movie-row">
            <td>{{movie.id}}</td>
            <td>{{movie.name}}</td>
            <td>{{movie.year}}</td>
            <td>{{movie.genre}}</td>
            <td>{{movie.imdb}}</td>
            <td>{{movie.box_office}}</td>
          </tr>
        </VerticalCollection>
        </tbody>

    </table>
  </div>
</div>
