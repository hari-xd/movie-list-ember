{{! app/templates/movies/new.hbs }}
<div class="form-container">
  <h2><i class="fas fa-film"></i> Add New Movie</h2>

  <form class="movie-form" {{on "submit" this.saveMovie}}>
    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-ticket-alt"></i>
        <label for="name">Movie Title</label>
      </div>
      <Input
        @type="text"
        id="name"
        @value={{this.name}}
        required
        placeholder="Enter movie title"
        class="form-input"
      />
    </div>

    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-calendar-alt"></i>
        <label for="year">Release Year</label>
      </div>
      <Input
        @type="number"
        id="year"
        @value={{this.year}}
        min="1900"
        max="{{this.currentYear}}"
        required
        placeholder="Release year"
        class="form-input"
      />
    </div>

    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-theater-masks"></i>
        <label for="genre">Genre</label>
      </div>
      <select
        id="genre"
        {{on "change" (fn (mut this.genre) value="target.value")}}
        class="form-input"
        required
      >
        <option value="">Select Genre</option>
        <option value="Action">Action</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Sci-Fi">Sci-Fi</option>
        <option value="Horror">Horror</option>
        <option value="Thriller">Thriller</option>
      </select>
    </div>

    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-star"></i>
        <label for="imdb">IMDb Rating</label>
      </div>
      <Input
        @type="number"
        id="imdb"
        @value={{this.imdb}}
        step="0.1"
        min="0"
        max="10"
        required
        placeholder="IMDb rating (0-10)"
        class="form-input"
      />
    </div>

    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-dollar-sign"></i>
        <label for="box-office">Box Office</label>
      </div>
      <Input
        @type="text"
        id="box-office"
        @value={{this.boxOffice}}
        required
        placeholder="Box office earnings (e.g., 100M or 1.5B)"
        class="form-input"
      />
    </div>

    <div class="form-actions">
      <button type="submit" class="btn submit-btn">
        <i class="fas fa-save"></i> Save Movie
      </button>
      <LinkTo @route="movies" class="btn cancel-btn">
        <i class="fas fa-times"></i> Cancel
      </LinkTo>
    </div>
  </form>
</div>