<div class="form-container">
  <h2><i class="fas fa-film"></i> Add New Movie</h2>
  <form class="movie-form" {{on "submit" this.saveMovie}}>
    
    <!-- Movie Title -->
    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-ticket-alt"></i>
        <label for="name">Movie Title</label>
      </div>
      <Input
        @type="text"
        id="name"
        @value={{this.name}}
        required
        placeholder="Enter movie title"
        class="form-input"
        data-input-index="0"
        {{on "keydown" this.handleEnterKey}}
      />
    </div>

    <!-- Release Year -->
    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-calendar-alt"></i>
        <label for="year">Release Year</label>
      </div>
      <Input
        @type="number"
        id="year"
        @value={{this.year}}
        min="1900"
        max="{{this.currentYear}}"
        required
        placeholder="Release year"
        class="form-input"
        data-input-index="1"
        {{on "keydown" this.handleEnterKey}}
      />
    </div>

    <!-- Genre (Multi-select) -->
    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-theater-masks"></i>
        <label for="genre">Genre</label>
      </div>
      <div class="power-select" data-input-index="2">
        <PowerSelectMultiple
          @options={{this.genres}}
          @selected={{this.selectedGenre}}
          @onChange={{this.updateGenre}}
          @placeholder="Select Genre"
          @triggerClass="form-input"
          @renderInPlace={{true}}
          {{on "keydown" this.handleEnterKey}}
          as |genre|
        >
          {{genre}}
        </PowerSelectMultiple>
      </div>
    </div>

    <!-- IMDb Rating -->
    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-star"></i>
        <label for="imdb">IMDb Rating</label>
      </div>
      <Input
        @type="number"
        id="imdb"
        @value={{this.imdb}}
        step="0.1"
        min="0"
        max="10"
        required
        placeholder="IMDb rating (0-10)"
        class="form-input"
        data-input-index="3"
        {{on "keydown" this.handleEnterKey}}
      />
    </div>

    <!-- Box Office -->
    <div class="form-group">
      <div class="input-icon">
        <i class="fas fa-dollar-sign"></i>
        <label for="box-office">Box Office</label>
      </div>
      <Input
        @type="text"
        id="box-office"
        @value={{this.boxOffice}}
        required
        placeholder="Box office earnings (e.g., 100M or 1.5B)"
        class="form-input"
        data-input-index="4"
        {{on "keydown" this.handleEnterKeylast}}
      />
    </div>

    <!-- Action Buttons -->
    <div class="form-actions">
      <button type="submit" {{on "click" (perform this.saveChangesTask)}} disabled={{this.saveChangesTask.isRunning}} class="btn submit-btn">
        <i class="fas fa-save"></i> Save Changes
      </button>

<LinkTo @route="movie-list" class="btn cancel-btn">
  <i class="fas fa-times"></i> Cancel
</LinkTo>


    </div>
  </form>
</div>
