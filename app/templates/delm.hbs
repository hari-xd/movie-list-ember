<div class="dellm">
  <form {{on "submit" this.deleteSelected}}
  {{on "keydown" this.handleDeletKey}}>
    <div class="del_btnnn">
      <button type="submit" class="btn delete-btn">üóëÔ∏è Delete Selected</button>
    </div>

    <div class="tb">
      <table class="movie-table">
        <thead>
          <tr>
            <th>Select</th>
            <th>S.No</th>
            <th>Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>IMDb</th>
            <th>Box Office</th>
          </tr>
        </thead>

        <tbody>
  {{#each this.model as |movie index|}}
    <tr class="movie-row">
      <td>
        <input
                type="checkbox"
                id="select-movie-{{movie.id}}"
                {{on "change" (fn this.toggleSelection movie.id)}}
              />
      </td>
      <td>{{movie.id}}</td>
      <td>{{movie.name}}</td>
      <td>{{movie.year}}</td>
      <td>{{movie.genre}}</td>
      <td>{{movie.imdb}}</td>
      <td>{{movie.box_office}}</td>
    </tr>
  {{/each}}
</tbody>


      </table>
    </div>
  </form>
</div>
