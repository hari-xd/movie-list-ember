{{page-title "Ecom"}}

<Container>
  <Navbar />
  <div class="flashy">
    {{#each this.flashMessages.queue as |flash|}}
      <FlashMessage @flash={{flash}} as |component flash close|>
        <div 
          class="custom-flash {{flash.type}}" 
          {{on-click-outside close exceptSelector=".custom-flash, .close-btn"}}
        >
          <p class="message">{{flash.message}}</p>

          <button type="button" class="close-btn" {{on "click" close}}>
            <i class="fas fa-times"></i>
          </button>
        </div>
      </FlashMessage>
    {{/each}}
  </div>


  
  {{outlet}}
  
</Container>

<BasicDropdownWormhole />